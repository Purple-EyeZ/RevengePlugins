		"@swc/core": "^1.15.11",
		"@swc/helpers": "^0.5.18",
		"rollup": "^4.57.1",
		"rollup-plugin-esbuild": "^6.2.1",
		"rollup-plugin-tsconfig-paths": "^1.5.2",
		"vendetta-types": "latest"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.0",
		"@types/bun": "^1.3.9",
		"concurrently": "^9.2.1",
